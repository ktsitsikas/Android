<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:tools="http://schemas.android.com/tools"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    tools:context=".ExampleApp" >  
  
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    
    <TextView  
        android:id="@+id/textView1"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_alignParentLeft="true"  
        android:layout_alignParentTop="true"  
        android:layout_marginTop="15dp"  
        android:text="@string/add_line" />
    
    <EditText
        android:id="@+id/vehicle_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/autoCompleteTextView1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/autoCompleteTextView1"
        android:layout_marginTop="17dp"
        android:inputType="number"
        android:textSize="@dimen/activity_vertical_margin" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:textSize="@dimen/activity_vertical_margin" >

        <requestFocus />
    </AutoCompleteTextView>

    <TextView
        android:id="@+id/busLineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/autoCompleteTextView1"
        android:layout_alignBottom="@+id/autoCompleteTextView1"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/button_ok"
        android:text="@string/busLineLabel"
        android:textSize="@dimen/activity_vertical_margin" />

    <TextView
        android:id="@+id/vehicleIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/vehicle_id"
        android:layout_alignBottom="@+id/vehicle_id"
        android:layout_alignParentLeft="true"
        android:text="@string/vehicleIdLabel"
        android:textSize="@dimen/activity_vertical_margin" />

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vehicle_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="@string/button_register" />
      
</RelativeLayout> 